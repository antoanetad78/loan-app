generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LoanOffer {
  id           String @id @default(uuid())
  provider     String
  interestRate Float
  termMonths   Int
  maxAmount    Int
  minAmount    Int
  type         String
}

model ComparisonLog {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  requestedAmount Int
  repaymentPeriod Int
  loanType        String
}
